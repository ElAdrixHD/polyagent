# === POLYMARKET ===
POLYMARKET_HOST=https://clob.polymarket.com
POLYMARKET_CHAIN_ID=137
WALLET_MODE=own                  # "own" o "proxy"
PRIVATE_KEY=0x...
PROXY_WALLET_ADDRESS=            # Solo si WALLET_MODE=proxy
CLOB_API_KEY=                    # Auto-generados si vacíos
CLOB_SECRET=
CLOB_PASSPHRASE=

# === OPENROUTER (LLM) ===
OPENROUTER_API_KEY=sk-or-...
LLM_MODEL=anthropic/claude-sonnet-4-20250514
LLM_ENABLED=true                 # false para desactivar validación LLM

# === ESTRATEGIA (ARBITRAJE) ===
ARBITRAGE_ENABLED=true           # false para desactivar arbitraje
MIN_PROFIT_THRESHOLD=0.025
MAX_TRADE_SIZE=100
SCAN_INTERVAL=10
SCANNER_WORKERS=1
MARKETS_PER_WORKER=200            # mercados por worker (total = workers * este valor)

# === FILTROS ===
MIN_MARKET_LIQUIDITY=1000
ONLY_ACTIVE_MARKETS=true

# === RIESGO ===
MAX_TOTAL_EXPOSURE=1000
MAX_DAILY_LOSS=50

# === MODO ===
DRY_RUN=true
USE_WEBSOCKET=true
LOG_LEVEL=INFO

# === TIGHT MARKET CRYPTO ===
TMC_ENABLED=false                # Enable tight market crypto strategy
TMC_MAX_INVESTMENT=2.0           # Max $ per trade (both sides combined)
TMC_ENTRY_WINDOW=30.0            # Enter in last N seconds before market closes
TMC_MAX_DAILY_LOSS=20.0          # Kill switch: max daily loss for this strategy
TMC_DISCOVERY_INTERVAL=30        # Seconds between market discovery scans
TMC_CRYPTO_ASSETS=BTC,ETH,SOL,XRP  # Crypto assets to track
TMC_VOLATILITY_MULTIPLIER=2.0   # Signal fires when distance < K * expected_move
TMC_VOLATILITY_WINDOW=300        # Seconds of Binance history for volatility calc
TMC_EXECUTION_WINDOW=5
TMC_VOLATILITY_BOOST_THRESHOLD=10.0  # Apply boost when remaining <= this many seconds
TMC_VOLATILITY_BOOST_FACTOR=3.0      # Multiply expected_move by this factor near expiry
TMC_MIN_MINORITY_ASK=0.05            # Skip if min(yes_ask, no_ask) < this (market too one-sided)
TMC_MAX_ENTRY_ASK=0.50               # Max ask price for the cheap side (underdog)
TMC_MIN_SECONDS_REMAINING=7.0        # Min seconds remaining to fire signal
TMC_MIN_VOLATILITY=0.00007           # Min volatility to trade (filters low-vol markets)
TMC_REQUIRE_STRIKE_CROSS=true        # Only trade if price crossed the strike during exec window
