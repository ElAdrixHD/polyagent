# === POLYMARKET ===
POLYMARKET_HOST=https://clob.polymarket.com
POLYMARKET_CHAIN_ID=137
WALLET_MODE=own                  # "own" o "proxy"
PRIVATE_KEY=0x...
PROXY_WALLET_ADDRESS=            # Solo si WALLET_MODE=proxy
CLOB_API_KEY=                    # Auto-generados si vacíos
CLOB_SECRET=
CLOB_PASSPHRASE=

# === OPENROUTER (LLM) ===
OPENROUTER_API_KEY=sk-or-...
LLM_MODEL=anthropic/claude-sonnet-4-20250514
LLM_ENABLED=true                 # false para desactivar validación LLM

# === ESTRATEGIA (ARBITRAJE) ===
ARBITRAGE_ENABLED=true           # false para desactivar arbitraje
MIN_PROFIT_THRESHOLD=0.025
MAX_TRADE_SIZE=100
SCAN_INTERVAL=10
SCANNER_WORKERS=1
MARKETS_PER_WORKER=200            # mercados por worker (total = workers * este valor)

# === FILTROS ===
MIN_MARKET_LIQUIDITY=1000
ONLY_ACTIVE_MARKETS=true

# === RIESGO ===
MAX_TOTAL_EXPOSURE=1000
MAX_DAILY_LOSS=50

# === MODO ===
DRY_RUN=true
USE_WEBSOCKET=true
LOG_LEVEL=INFO

# === TIGHT MARKET CRYPTO (v3 — Black-Scholes N(d₂) pricing) ===
TMC_ENABLED=true                     # Enable tight market crypto strategy
TMC_MAX_INVESTMENT=1.0               # Max $ per trade
TMC_ENTRY_WINDOW=60                  # Entry window: last N seconds before expiry
TMC_EXECUTION_WINDOW=16              # Execution window: signals only fire in last N seconds
TMC_MAX_DAILY_LOSS=20.0              # Kill switch: max daily loss for this strategy
TMC_DISCOVERY_INTERVAL=30            # Seconds between market discovery scans
TMC_CRYPTO_ASSETS=BTC,ETH,SOL,XRP   # Crypto assets to track
TMC_VOLATILITY_WINDOW=300            # Seconds of price history for volatility calc
TMC_MIN_SECONDS_REMAINING=7.0        # No operar con <Ns restantes
TMC_MIN_VOLATILITY=0.00007           # Global fallback min volatility
TMC_MIN_EDGE=0.10                    # Global fallback min edge
TMC_MIN_ASK=0.03                     # Min ask to avoid illiquid extremes

# Per-crypto overrides (override global TMC_MIN_VOLATILITY / TMC_MIN_EDGE per asset)
# If not set for an asset, the global values above are used as fallback.
# TMC_MIN_VOL_BTC=0.00010
# TMC_MIN_VOL_ETH=0.00010
# TMC_MIN_VOL_SOL=0.00015
# TMC_MIN_VOL_XRP=0.00005
# TMC_MIN_EDGE_BTC=0.15
# TMC_MIN_EDGE_ETH=0.20
# TMC_MIN_EDGE_SOL=0.15
# TMC_MIN_EDGE_XRP=0.10